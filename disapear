using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class disapear : MonoBehaviour
{
    private void OnTriggerEnter(Collider collision)
    {
        // check characters' tag
        if (collision.CompareTag("audience"))
        {
            // audience disapear
            Destroy(collision.gameObject);
        }
        // check character's tag
        if (collision.CompareTag("npc"))
        {
            // npc disapear
            Destroy(collision.gameObject);
            // connect disapeared object with count number
            // call the contents of the count script
            count gameManager = FindObjectOfType<count>();
            if (gameManager != null)
            {
                // check npc come across the door
                if (gameObject.CompareTag("door")) 
                {
                    // escape peolple number add one
                    gameManager.IncrementEscapeCount(); 
                }
                // as soon as an npc touches the object with fire tag, the game fails and ends
            }
        }
    }
}
